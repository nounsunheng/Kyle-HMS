# Kyle-HMS Root .htaccess
# Prevent direct access to sensitive folders

# Deny access to app folder
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^app/ - [F,L]
    RewriteRule ^vendor/ - [F,L]
    RewriteRule ^database/ - [F,L]
    RewriteRule ^storage/ - [F,L]
    RewriteRule ^views/ - [F,L]
</IfModule>

# Deny access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "composer\.(json|lock)$">
    Order allow,deny
    Deny from all
</FilesMatch>